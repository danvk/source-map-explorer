{
  "name": "source-map-explorer",
  "version": "1.8.0",
  "description": "Analyze and debug space usage through source maps",
  "main": "index.js",
  "bin": {
    "source-map-explorer": "dist/cli.js"
  },
  "scripts": {
    "pretest": "npm run build",
    "test": "mocha tests/*.test.js --require ./tests/babel-register.js",
    "test:update-snapshots": "cross-env CHAI_JEST_SNAPSHOT_UPDATE_ALL=true npm run test",
    "coverage": "nyc --reporter=lcov mocha",
    "lint": "eslint src/**/*.* --fix",
    "check-types": "tsc",
    "build:clean": "rimraf dist",
    "build:compile": "babel src --out-dir dist --extensions \".ts\" --ignore src/*.d.ts",
    "build:copy": "copyfiles -u 1 src/vendor/*.* src/tree-viz.ejs dist",
    "build:format": "prettier dist/*.js --write",
    "build": "npm-run-all build:* check-types",
    "prepublish": "npm run build"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/danvk/source-map-explorer.git"
  },
  "keywords": [
    "source-map",
    "browser",
    "minification"
  ],
  "author": "Dan Vanderkam (danvdk@gmail.com)",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/danvk/source-map-explorer/issues"
  },
  "homepage": "https://github.com/danvk/source-map-explorer#readme",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "btoa": "^1.2.1",
    "convert-source-map": "^1.6.0",
    "ejs": "^2.6.1",
    "fs-extra": "^7.0.1",
    "glob": "^7.1.3",
    "open": "^6.1.0",
    "source-map": "^0.7.3",
    "temp": "^0.9.0",
    "yargs": "^13.2.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "@babel/preset-typescript": "^7.3.3",
    "@babel/register": "^7.4.0",
    "@types/btoa": "^1.2.3",
    "@types/convert-source-map": "^1.5.1",
    "@types/ejs": "^2.6.3",
    "@types/fs-extra": "^5.0.5",
    "@types/glob": "^7.1.1",
    "@types/node": "^11.13.2",
    "@types/open": "^6.1.0",
    "@types/temp": "^0.8.33",
    "@types/yargs": "^13.0.0",
    "@typescript-eslint/eslint-plugin": "^1.6.0",
    "@typescript-eslint/parser": "^1.6.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-jest-snapshot": "^2.0.0",
    "concat-stream": "^2.0.0",
    "copyfiles": "^2.1.0",
    "cross-env": "^5.2.0",
    "cross-spawn": "^6.0.5",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "mocha": "^6.1.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^13.3.0",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "typescript": "^3.4.2"
  }
}
