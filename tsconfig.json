{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": "src",
    "target": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "dist",
    "strict": true,
    "strictBindCallApply": true,
    "esModuleInterop": true,
    "noImplicitAny": false // TODO: Remove after source-map update
  },
  "include": ["src"],
  "exclude": ["src/vendor"]
}
